@model WebApplication1.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout_1.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <img src="~/Content/img/111.jpg" class="img img-responsive" style="width:100%" />
    </div>
</div>


<div class="row">

    <div class="col-lg-2 col-md-2">
        
    </div>


    <div class="col-lg-8 col-md-8">

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
        </div>

        <img align="left" src="@Url.Content(@Model.pro_img)" style="width:600PX; height:600PX" />

        <div>
            <h1>Description: </h1>
            <p>@Model.pro_descrip</p>
            <table>

                <tr> <td>Price: </td> <td>@Model.pro_price BDT</td> </tr>
                <tr> <td>Category: </td> <td>@Model.cat_name </td> </tr>
                <tr> <td>Posted by: </td> <td>@Model.u_name <img src="@Url.Content(@Model.u_img)" style="width:40px; height:40px" /> </td> </tr>
                <tr> <td>Contact: </td> <td>@Model.u_contact  </td> </tr>
                <tr>
                    <td colspan="2">
                        @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_usr))
                        {

                            @Html.ActionLink("Remove this Ad", "DeleteAd", new { @class = "btn btn-info", id = Model.pro_id })



                        }
                    </td>
                </tr>

            </table>
            <p>
                @Html.ActionLink("Add to Cart", "AddtoCart", new {id =Model.pro_id}, new { @class = "btn btn-primary btn-sm", style = "text-decoration:none; margin-right: 10px;" })
            </p>
        </div>

        



    </div>


</div>


