@model WebApplication1.Models.admn
@{
    Layout = null;
}
<style>
    #box {
        border: 1px solid black;
        height: 100%;
    }

    #main-div {
        height: 900px;
        background-image: url('../../Content/img/building.jpg');
        background-size: 100% 900px;
    }

    .insidebox {
        border: 1px solid black;
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 150px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 50px 50px 50px 50px;
        background-color: rgba(128, 135, 125,0.5);
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />




<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (@Html.BeginForm())
        {
        <div class="insidebox">
            <div> <h1 style="color:#d93636; font-family:Britannic">Admin Dashboard</h1></div>

            <div class="form-group">

                <input type="submit"  value="Add Categories" class="btn btn-success btn-block" formaction="@Url.Action("Create", "Admin")" />

            </div>

            <div class="form-group">

                <input type="submit" value="Delete Categories" class="btn btn-success btn-block" formaction="@Url.Action("ViewCategory", "Admin")" />

            </div>

            <div class="form-group">

                <input type="submit" value="Visit Categories" class="btn btn-success btn-block" />

            </div>

        </div>

        }
    </div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
